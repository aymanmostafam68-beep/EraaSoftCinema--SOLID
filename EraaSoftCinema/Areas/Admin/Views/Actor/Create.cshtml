<!DOCTYPE html>
<html lang="en">
    @model Actor

<head>
    <meta charset="UTF-8">
    <title>Add Actor</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <form method="post" asp-area="Admin" asp-controller="Actor" asp-action="Create" enctype="multipart/form-data">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">

                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Create New Actor</h5>
                        </div>

                        <div class="card-body">

                      
                            <!-- Name -->
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" placeholder="Enter"
                                       asp-for="name">
                                <span class="text-danger" asp-validation-for="name"></span>

                                <!-- Description -->
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea class="form-control"
                                              asp-for="description"
                                              rows="5"></textarea>
                                    <span class="text-danger" asp-validation-for="description"></span>

                                </div>

                         
                            <!-- Image Name -->
                            <div class="mb-3">
                                <label class="form-label">Actor Image</label>
                                    <input type="file" id="Mainfile" name="file" class="form-control">
                                <span class="text-danger" asp-validation-for="imgUrl"> </span>
                                    <img id="MainfilePreview"
                                         src="~/img/Category/@Model.imgUrl"
                                         class="card-img-top"
                                         alt="Category Preview"
                                         style="width: 100%; height: 400px; object-fit: cover;">

                            </div>

                            <!-- Buttons -->
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-success">
                                    Add
                                </button>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
