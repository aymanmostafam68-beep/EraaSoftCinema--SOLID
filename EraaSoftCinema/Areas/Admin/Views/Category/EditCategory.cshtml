<!DOCTYPE html>
<html lang="en">
    @model Category

<head>
    <meta charset="UTF-8">
    <title>Edit Item</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <form method="post" asp-area="Admin" asp-controller="Category" asp-action="EditCategory" enctype="multipart/form-data">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">

                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Edit Item</h5>
                        </div>

                        <div class="card-body">
                            <form>

                                <!-- ID -->
                                <!-- ID -->
                                <input type="hidden" asp-for="id" />

                                <!-- Name -->
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" placeholder="" asp-for="name">
									<span class="text-danger" asp-validation-for="name"></span>
                                </div>

                                <!-- Status -->
                                <div class="mb-3">
                                    <label class="form-label">Status</label>

                                    <select asp-for="status" class="form-select">
                                        <span class="text-danger" asp-validation-for="status"></span>

                                        @if(Model.status==true)
                                        {
                                            <option value="true" selected>Active</option>
                                            <option value="false">Inactive</option>


                                        }
                                        else
                                        {
                                            <option value="true" >Active</option>
                                            <option value="false" selected>Inactive</option>
                                        }
                                    </select>
                                </div>





                                <!-- Image Name -->
                                <div class="mb-3">
                                    <label class="form-label">Category Image</label>
                                    <input type="file" id="Mainfile" name="file" class="form-control">
                                    <span class="text-danger" asp-validation-for="imgUrl"></span>
                                </div>

                                <!-- Buttons -->
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-success">
                                        Submit
                                    </button>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <label class="form-label">Image Name:</label>
                                        <h5 class="card-title">@Model.imgUrl</h5>
                                    </div>

                                    <img id="MainfilePreview"
                                         src="~/img/Category/@Model.imgUrl"
                                         class="card-img-top"
                                         alt="Category Preview"
                                         style="width: 100%; height: 400px; object-fit: cover;">

                                    <div class="card-body">
                                        <p class="text-muted text-center">Current Category Image</p>
                                    </div>
                                </div>
                      

                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ToastreScriptPartial" />

        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
