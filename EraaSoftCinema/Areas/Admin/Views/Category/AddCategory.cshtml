@model Category

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Create Item</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />



</head>
<body class="bg-light">
    <form method="post" asp-area="Admin" asp-controller="Category" asp-action="AddCategory" enctype="multipart/form-data">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">

                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Create New Item</h5>
                        </div>

                        <div class="card-body">

                                @*     <!-- ID -->
                            <div class="mb-3">
                                <label class="form-label">ID</label>
                                <input type="number" class="form-control" placeholder="Enter ID">
                            </div> *@

                                <!-- Name -->
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" placeholder="Enter"
                                           asp-for="name">
                                    <span class="text-danger" asp-validation-for="name"></span>


                                </div>

                                <!-- Status -->
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                <select class="form-select" asp-for="status">
                                        <option selected disabled>Choose status</option>
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                    </select>
                                </div>

                                <!-- Image Name -->
                                <div class="mb-3">
                                    <label class="form-label">Category Image</label>
                                <input type="file" id="Mainfile" name="file" class="form-control">
								<span class="text-danger" asp-validation-for="imgUrl"> </span>
                                <img id="MainfilePreview"
                                     src="~/img/Category/@Model.imgUrl"
                                     class="card-img-top"
                                     alt="Category Preview"
                                     style="width: 100%; height: 400px; object-fit: cover;">

                                <div class="card-body">
                                    <p class="text-muted text-center">Current Category Image</p>
                                </div>
                                </div>

                                <!-- Buttons -->
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-success">
                                        Add
                                    </button>

                                </div>
                      

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    @section Scripts
    {

        <partial name="_ToastreScriptPartial" />
        <partial name="_ValidationScriptsPartial" />

    }

 



 
</body>
</html>
